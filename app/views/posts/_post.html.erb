    <div class="col-sm">
      <div class="card" style="width:35em" >
      <%= image_tag post.image, class: "card-img-top" if post.image.attached? %>
      <div class="position-relative">
      <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.contents %></p>
      <div class="position-absolute top-0 end-0">
        <p>Menu</p>
        <ul class="list-group">
         <li>
            <%= link_to '詳細', post_path(post.id), method: :get %>
          </li>
           <% if user_signed_in? && current_user.id == post.user_id %>
         <li>
            <%= link_to '編集', edit_post_path(post.id), method: :get %>
          </li>
          <li>
            <%= link_to '削除', post_path(post.id), method: :delete %>
          </li>
          <% end %>
        </ul>
        </div>
      <% if user_signed_in? %>
      <% if current_user.enemy_bad_by?(post.id) %>
          <div class="btn btn-secondary">
          <%= link_to '相手が悪い', destroy_enemy_bad_path(post), method: :DELETE,class:"text-white" %><%= post.enemy_bad.count %></div>
        <% else %>
          <div class="btn btn-primary">
          <%= link_to '相手が悪い', create_enemy_bad_path(post), method: :POST,class:"text-white" %><%= post.enemy_bad.count %></div>
        <% end %>
        <% end %>
        <div class="position-absolute bottom-0 end-0">
        <a href="">
          <span >投稿者</span><%= post.user.nickname %>
        </a>
        </div>
      </div>
    
  </div>
</div>
</div>